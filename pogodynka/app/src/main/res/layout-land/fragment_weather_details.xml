<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kubat.piotr.pogodynka.WeatherFragment">
    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/primary_text_light"
        android:background="@color/primary"
        android:textSize="36sp"
        android:text="Test"
        android:padding="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/default_padding">
        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="0dp"
            android:layout_weight=".85"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="72sp"
            android:textColor="@color/secondary_text"
            android:text="0"/>
            <TextView
                android:id="@+id/temp_sign"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/secondary_text"
                android:text="â„ƒ"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <com.github.pwittchen.weathericonview.WeatherIconView
            android:id="@+id/weather_icon"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="center"
            app:weatherIconColor="@color/accent"
            android:textColor="@color/accent"
            android:text="@string/wi_alien"
            app:weatherIconSize="72"
            android:textSize="72sp" />
        <TextView
            android:id="@+id/weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_below="@id/weather_icon"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:text=""/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weather_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/wrapper"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
                <com.github.pwittchen.weathericonview.WeatherIconView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    app:weatherIconColor="@color/accent"
                    android:textColor="@color/accent"
                    android:text="@string/wi_barometer"
                    android:textSize="16sp"
                    app:weatherIconSize="16"/>
                <TextView
                    android:id="@+id/weather_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/secondary_text"
                    android:text="1111"/>
            <com.github.pwittchen.weathericonview.WeatherIconView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                app:weatherIconColor="@color/accent"
                android:textColor="@color/accent"
                android:text="@string/wi_humidity"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                app:weatherIconSize="16"/>
            <TextView
                android:id="@+id/weather_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/secondary_text"
                android:text="1111"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>

